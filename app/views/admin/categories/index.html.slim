.card
  .card-header
    h3.card-title All Categories
  .card-body.table-responsive.p-0
    table.table.table-hover
      thead
        tr
          th Name
          th Number of Products
          th
      tbody
        - @categories.each do |category|
          tr
            td= category.name
            td= ActsAsTaggableOn::Tag.find_by(name: category.name)&.taggings_count
            td
              .btn-group
                = link_to 'Edit', edit_admin_category_path(category), class: "btn btn-info"
                = link_to 'Delete', admin_category_path(category), data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger"
  .card-footer.clearfix
    = link_to 'New Cetagory', new_admin_category_path, class: "btn btn-success"
    = paginate @categories
